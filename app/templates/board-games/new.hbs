<div>
  <form {{action "createBoardGame" on="submit"}}>
    <div class="board-game-field">
      <strong class="board-game-field-label">Name: </strong>{{input type="text" placeholder="Board Game Name" value=name id="new-board-game-name"}}
    </div>
    <div class="board-game-field">
      <strong class="board-game-field-label">Description: </strong>{{textarea name="description" value=description placeholder="Board Game overview" id="new-board-game-desc"}}
    </div>
    <div class="board-game-field">
      <strong class="board-game-field-label">Rating: </strong>{{star-rating rating=rating on-click=(action "setRating")}}
    </div>
    <div class="board-game-field">
      <strong class="board-game-field-label">Number of Players: </strong>{{input type="text" placeholder="2+" value=numPlayers id="new-board-game-num-players"}}
    </div>
    <div class="board-game-field">
      <strong class="board-game-field-label">Tags: </strong>
      {{#power-select-multiple
        options=model
        selected=tag
        onchange=(action (mut tag))
        searchField="name"
        placeholder="Please add tag(s)"
        as |tag|
      }}
        {{tag.name}}
      {{/power-select-multiple}}
    </div>
    <button type="submit" class="btn btn-primary btn-sm" id="create-board-game-button">Create</button>
  </form>
</div>
